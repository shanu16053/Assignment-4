<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="ViewPagerTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ToDoPageDetailTb" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text"></item>
        <item name="android:textColor">#2e2a2a</item>
        <item name="android:onClick">ViewTask</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ToolBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">Add Task</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:onClick">AddTask</item>
    </style>

    <style name="FragmentStyle">

    </style>
</resources>
